<br/>
<div class="dark-matter">
  
  <script>
    $.notify("<%= notice %>", "success");
  </script>
  
  <h1><%= "#{t('messages.listing')} #{@kinds.model.model_name.human(count: @kinds.count)}" %></h1>
  
  <table>
    <thead>
      <tr>
        <th><%= @kinds.model.human_attribute_name("description") %></th>
        <th colspan="2"></th>
      </tr>
    </thead>
  
    <tbody>
    <% @kinds.each do |kind| %>
      <tr>
        <td><%= kind.description %></td>
        <td><%= link_to '⋄.⋄', kind %></td>
        <!--<td><%= link_to t('Show'), kind, class: "iconeShow" %></td>-->
        <td><%= link_to '✎', edit_kind_path(kind)%></td>
        <td><%= link_to '✖', kind, method: :delete, data: { confirm: 'Are you sure?' }%></td>
      </tr>
    <% end %>
  </tbody>
</table>
  
  <br>
  
  <%= paginate @kinds %>
  
  <br>
  
  <%= link_to t('buttons.new'), new_kind_path, class: "btn btn-primary" %>
  <%= link_to t('buttons.home'),root_path, class: "btn btn-success" %>
</div>